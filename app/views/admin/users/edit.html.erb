<div class="container">
  <div class="row">
    <div class="col">
      <h5><%= @user.name %>さんの会員情報</h5>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= form_with model: @user, url: admin_user_path, method: :patch, local: true do |f| %>

      <div class="row">
        <%= f.label "会員ID", class: "col-sm-2 col-label" %>
        <%= @user.id %>
      </div>

      <div class="row">
        <%= f.label "名前", class: "col-sm-2 col-label" %>
        <%= @user.name %>
      </div>

      <div class="form-group row">
        <%= f.label "会員ステータス", class: "col-sm-2 col-form-label" %>
        <div class="col-md-2">
          <ul>
            <li>
              <%= f.radio_button :is_deleted, :false %>
              <%= f.label "有効" %>
            </li>
          </ul>
        </div>

        <div class="col-md-2">
          <ul>
            <li>
              <%= f.radio_button :is_deleted, :true %>
              <%= f.label "退会" %>
            </li>
          </ul>
        </div>

        <div class="action">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>