<div class="container">
  <div class="row">
    <div class="col-md-5">
      <h5><%= @user.name %>さんの会員詳細</h5>
    </div>
  </div>

  <div class="row">
    <div class="mx-auto col-md-12 mt-3">
      <table>

        <tr>
          <th class="col-md-2">会員ID</th>
          <td><%= @user.id %></td>
        </tr>

        <tr>
          <th>名前</th>
          <td><%= @user.name %></td>
        </tr>

        <tr>
          <th>会員ステータス</th>
          <% if @user.is_deleted == false %>
            <td class="text-success">有効</td>
          <% else %>
            <td class="text-secondary">退会</td>
          <% end %>
        </tr>
      </table>

      <%= link_to "編集する", edit_admin_user_path(@user), class: "btn btn-success" %>
    </div>
  </div>
</div>