    <li class="nav-item">
      <%= link_to "ログイン", new_user_session_path, class: 'mx-1 nav-link btn btn-light btn-sm mr-2' %>
    </li>

    <li class="nav-item">
      <%= link_to "ゲストログイン",  guest_sign_in_path, method: :post, class: 'mx-1 nav-link btn btn-light btn-sm mr-2' %>
