<div class="naver-inner">
  <div class="container">
  <a class="naver-brand p-3" href="/"><%= image_tag('logo.jpg') %></a>

  <ul class="nav col-6 col-sm-auto col-lg-auto my-2 justify-content-end my-md-0">
    <% if user_signed_in? %>
    <li class="nav-item">
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'mx-1 nav-link btn btn-light btn-sm mr-2' %>
    </li>

    <li class="nav-item">
      <%= link_to "マイページ", users_my_page_path, class: 'mx-1 nav-link btn btn-light btn-sm mr-2' %>
    </li>

    <% elsif admin_signed_in? %>
    <li class="nav-item">
      <%= link_to "Log out", destroy_admin_session_path, method: :delete, class: 'mx-1 nav-link btn btn-light btn-sm mr-2' %>
    </li>

    <% else %>
    <li class="nav-item">
      <%= link_to "新規登録", new_user_registration_path, class: 'mx-1 nav-link btn btn-light btn-sm mr-2' %>
