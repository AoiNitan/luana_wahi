<div class="container">
  <div class="row">
    <div class="col">
      <h2>プロフィール編集</h2>

      <% if @user.email == "abc@aaa.com" %>
        <h2>ゲストユーザーはユーザー情報の編集ができません</h2>
      <% else %>
        <%= form_with model:@user do |f| %>
          <label>name : </label>
          <%= f.text_field :name, autofocas: true, placeholder:"new name" %>
          <label>ProfileImage : </label>
          <%= f.file_field :profile_image, placeholder:"new image", accept:"image/*" %>
          <%= f.submit "変更を保存" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>