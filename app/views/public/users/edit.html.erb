<div class="container">
  <div class="row">
    <div class="col">
      <h2>プロフィール編集</h2>

      <% if @user.email == "abc@aaa.com" %>
        <h2>ゲストユーザーはユーザー情報の編集ができません</h2>
      <% else %>
        <%= form_with model:@user do |f| %>
          <label>name : </label>
          <%= f.text_field :name, autofocas: true, placeholder:"new name" %>
          <label>ProfileImage : </label>
          <%= f.file_field :profile_image, placeholder:"new image", accept:"image/*" %>
          <%= f.submit "変更を保存" %>
        <% end %>
      <% end %>


      <%= form_with model: @user, url: users_information_path, local: true do |f| %>
        <div class="form-group row mb-3">
          <%= f.label "名前", class: "col-sm-4 col-form-label" %>
          <%= f.text_field :name, autofocas: true, class: "form-control col-sm-3" %>
        </div>

        <div class="for-group row mb-3">
          <%= f.label "プロフィール画像", class: "col-form-label" %>
          <%= f.file_field :profile_image, placeholder:"プロフィー画像", accept:"image/*" %>
        </div>

        <div class="action row ml-6">
          <%= f.submit "編集内容保存", class: "btn btn-success btn-sm-3 ml-6" %>
          <%= link_to "退会する", users_unsubscribe_path, class: "btn btn-danger btn-sm-2 ml-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>