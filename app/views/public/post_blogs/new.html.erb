<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="text-dark">ブログ投稿フォーム</h4>

      <% if @post_blog.errors.any? %>
        <ul class="alert alert-denger" role="alert">
          <h6 class="alert-heading">
            <%= @post_blog.errors.count %>件のエラーが発生しました
          </h6>
          <%= @post_blog.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @post_blog do |f| %>
        <div class="bloginput">
          <%= f.text_field :title_blog, class: "form-control mt-3", placeholder:"ブログタイトル" %>
          <%= f.text_area :content_blog, class: "form-control mt-2", size: "50x10", placeholder:"内容" %>
          <hr>
          <%= f.submit '投稿', class: "btn btn-info mt-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>