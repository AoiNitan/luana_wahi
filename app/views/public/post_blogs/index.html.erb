<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2>Blog</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Content</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @post_blogs.each do |post_blog| %>
            <tr>
              <%= link_to user_path(post_blog.user) do %>
                <td>
                  <%= image_tag post_blog.user.get_profile_image(50,50) %>
                </td>
              <% end %>
              <td>
                <%= link_to post_blog_path(post_blog.id) do %>
                  <%= post_blog.title_blog %>
                <% end %>
              </td>
              <td><%= post_blog.content_blog.truncate(15) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>