<div class="container">
  <div class="row">
    <div class="col">
      <h5>フォロー一覧</h5>
      <% if @users.exists? %>

        <% @users.each do |user| %>
          <table>
          <tr>
          <td>
          <%= link_to user_path(user) do %>
            <%= user.name %>
          <% end %>
          </td>
          </tr>
          </table>
        <% end %>

      <% else %>
        <p>フォローしているユーザーはいません</p>

      <% end %>
    </div>
  </div>
</div>