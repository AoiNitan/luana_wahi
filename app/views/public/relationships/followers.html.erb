<div class="container">
  <div class="row">
    <div class="col">
      <h5>フォロワー一覧</h5>

      <% if @users.exists? %>

        <% @users.each do |user| %>
          <%= link_to user_path(user) do %>
            <%= user.name %>
          <% end %>
        <% end %>

      <% else %>
        <p>フォロワーはいません</p>

      <% end %>
    </div>
  </div>
</div>